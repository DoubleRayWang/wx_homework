.mySubmitWork, .teacherComment {
    padding-top: 30rpx;
}

.container{
    display: block;
}

.title {
    display: flex;
    flex-direction: row;
}

.title text {
    padding-left: 6rpx;
}

/*大标题  */

.headlines {
    font-size: 18px;
    margin: 0 24rpx;
    padding-bottom: 16rpx;
    margin-bottom: 20rpx;
     border-bottom: 1px dashed #dfdfdf; 
    line-height: 20px;
    color: #24BCE5;
    font-weight: 600;
}

.headlines image {
    width: 22px;
    height: 22px;
}

/*小标题  */

.subtitle {
    font-size: 15px;
    line-height: 16px;
    padding: 10rpx 0 20rpx;
    color: #24BCE5;
    opacity: .6;
    justify-content: center;
    font-weight: 500;
}

/* .subtitle image {
    width: 16px;
    height: 16px;
} */

.workImages {
    margin: 10rpx 0;
    padding-top: 10rpx;
    background-color: #fff;
}

.workImage {
    display: flex;
    justify-content: flex-start;
    flex-wrap: wrap;
    padding: 0 0 20rpx 3px;
    /* border-bottom: 1px solid #ddd; */
}

.workImage .imageList {
    padding: 4rpx;
    width: 32%;
    height: 220rpx;
}

.imageList image {
    width: 100%;
    height: 100%;
}

.workImage .imageListOne {
    display: flex;
    justify-content: center;
    padding: 4rpx;
    width: 100%;
    height: auto;
}

.workVideo {
    padding: 10rpx 30rpx;
    margin: 10rpx 0;
    background-color: #fff;
}

.workVideo video {
    width: 100%;
}

.answer {
    background-color: #fff;
    padding: 10rpx 20rpx 30rpx;
}

.workContent {
    font-weight: 700;
    font-size: 14px;
    color: #000;
}

.commentContent {
    background-color: #fff;
    padding: 50rpx;
}

.commentText {
    font-weight: 500;
    font-size: 14px;
}

.commentBrow {
    width: 120rpx;
    height: 120rpx;
}

