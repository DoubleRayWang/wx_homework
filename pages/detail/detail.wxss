.mySubmitWork, .teacherComment {
    padding-top: 36rpx;
}

.title {
    display: block;
    font-size: 18px;
    padding: 0 0 18rpx 24rpx;
    color: #666;
}

.workImage {
    display: flex;
    justify-content: flex-start;
    flex-wrap: wrap;
    padding: 10rpx 0 20rpx 3px;
    background-color: #fff;
    border-bottom: 1px solid #ddd;
}
.workImage .imageList{
    padding: 4rpx;
    width: 32%; 
    height: 220rpx;
}
.imageList image{
    width: 100%;
    height: 100%;
} 
.workImage .imageListOne{
    display: flex;
    justify-content: center;
    padding: 4rpx;
    width: 100%; 
    height: auto;
}

.workVideo video {
    width: 100%;
}

.mySubmitWork .answer {
    background-color: #fff;
    padding: 30rpx 20rpx;
    font-size: 14px;
    color: #000;
    font-weight: 700;
}

.commentContent {
    background-color: #fff;
    padding: 50rpx;
}

.commentText {
    font-weight: 500;
    font-size: 14px;
}

.commentBrow {
    width: 120rpx;
    height: 120rpx;
}

